<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#F7F8FB">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="16dp"
        android:paddingTop="24dp"
        android:paddingBottom="32dp">

        <!-- Welcome Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="2dp"
            android:backgroundTint="@color/welcome_bg"
            android:layout_marginBottom="24dp"
            app:cardUseCompatPadding="true"
            app:cardPreventCornerOverlap="false"
            android:clipToOutline="false"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:id="@+id/tvWelcome"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Welcome back, Prakhyat!"
                    android:textColor="#1E1E1E"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="6dp" />

                <TextView
                    android:id="@+id/tvOverview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Hereâ€™s an overview of your civic engagement activity"
                    android:textColor="#666666"
                    android:textSize="14sp"
                    android:layout_marginBottom="14dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnReportNewIssue"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:minHeight="0dp"
                    android:paddingHorizontal="16dp"

                    app:icon="@drawable/ic_add"

                    app:iconPadding="8dp"

                    android:backgroundTint="#0A3D91"
                    android:textColor="@android:color/white"
                    android:textSize="14sp"
                    android:textAllCaps="false"
                    android:text="Report New Issue"
                    />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Dashboard Cards -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:weightSum="3"
            android:layout_marginBottom="24dp">

            <include
                android:id="@+id/cardReported"
                layout="@layout/item_dashboard_card"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp" />

            <include
                android:id="@+id/cardInProgress"
                layout="@layout/item_dashboard_card"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp" />

            <include
                android:id="@+id/cardResolved"
                layout="@layout/item_dashboard_card"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <!-- Recent Issues Section -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="2dp"
            android:backgroundTint="@android:color/white"
            app:cardUseCompatPadding="true"
            app:cardPreventCornerOverlap="false"
            android:clipToOutline="false"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:id="@+id/tvRecentIssues"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Your Recent Issues"
                    android:textColor="#1E1E1E"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="16dp" />

                <!-- Empty State -->
                <LinearLayout
                    android:id="@+id/layoutNoIssues"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="220dp"
                    android:orientation="vertical"
                    android:layout_marginBottom="128dp"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/tvNoIssues"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="You haven't reported any issues yet."
                        android:textColor="#777777"
                        android:textSize="14sp"
                        android:layout_marginBottom="10dp" />

                    <Button
                        android:id="@+id/btnReportFirstIssue"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:minHeight="0dp"
                        android:paddingHorizontal="20dp"
                        android:text="Report Your First Issue"
                        android:textColor="@android:color/white"
                        android:textSize="14sp"
                        android:backgroundTint="#0A3D91" />
                </LinearLayout>

                <!-- RecyclerView -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerRecentIssues"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</ScrollView>
